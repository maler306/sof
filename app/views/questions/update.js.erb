<% if @question.errors.present? %>
    <% @question.errors.full_messages.each do |message| %>
        $('.question-errors').append('<%= j message %>');
    <% end %>
<% else %>
    $('#question-block').html("<%= j render 'question' %>");
    $('.edit-question-form').hide();
    $('.edit-question-link').show();

<% end %>
