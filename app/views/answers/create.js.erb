$('.flash').html('<%= flash[:notice] %>');
<% if @answer.errors.present? %>
  <% errors = '' %>
  <% @answer.errors.full_messages.each do |message| %>
    <% errors << "#{message}" %>
  <% end %>
    $('.answer-errors').html('<%= j errors %>');
<% else %>
  $('.answers').append('<%= j render @answer %>');
  $('.answer-errors').empty();
  $('#answer_body').val('');
<% end %>
